@page
@model JoesPizzaNation.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainEffect">
        <h1 class="display-4 text-capitalize text-black">
            Menu</h1>
        
    </div>
    <div class="container">
        <div class="row">
         
            @foreach (var pizzaItem in Model.mockPizzaDB)
            {
                var imagePath = "~/images/Pizzas/" + (pizzaItem.ImageUrl + ".png");
                var namePath = pizzaItem.PizzaName;
                <div class="col-4 mb-5">

                    <img src="@imagePath" class="img-fluid" asp-append-version="true" />
                    <p>@namePath</p>
                    <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout" 
                    asp-route-ImageUrl="@pizzaItem.ImageUrl" asp-route-PizzaPrice="@pizzaItem.FinalPrice"
                   asp-route-PizzaName="@pizzaItem.PizzaName" asp-route-OrderId="@pizzaItem.OrderId">Purchase Now</a>
                    <br />


                </div>

            }
            
        </div>

    </div>
</div>